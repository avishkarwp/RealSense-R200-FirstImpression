<Window x:Class="RealSenseSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RealSense Sample" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >
    <Grid>
        <Image x:Name="ImageDepth" Width="640" Height="480"/>
        <Canvas x:Name="CanvasPoint" />

        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="TextModel" FontSize="20" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock x:Name="TextWidth" FontSize="20" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock x:Name="TextHeight" FontSize="20" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
